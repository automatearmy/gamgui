## API Configuration

# Google Cloud Project ID
PROJECT_ID=your-gcp-project-id

REGION=us-central1

# Application environment (development, staging, production)
ENVIRONMENT=development

# API server port
PORT=8000

## Registry Configuration (Artifact Registry for container images)
# Project ID for artifact registry
REGISTRY_PROJECT_ID=your-registry-project-id

# Region for artifact registry
REGISTRY_PROJECT_REGION=us-central1

# Repository name in artifact registry
REGISTRY_REPOSITORY_NAME=gamgui

# Container image names
REGISTRY_SERVER_IMAGE_NAME=gamgui-server
REGISTRY_CLIENT_IMAGE_NAME=gamgui-client
REGISTRY_SESSION_IMAGE_NAME=gamgui-session

## OAuth Configuration
# Service account email for server
SERVER_SERVICE_ACCOUNT_EMAIL=gamgui-server@your-project-id.iam.gserviceaccount.com

# OAuth client ID for server-side authentication
SERVER_OAUTH_CLIENT_ID=your-server-oauth-client-id

# OAuth client secret for server-side authentication
SERVER_OAUTH_CLIENT_SECRET=your-server-oauth-client-secret

# OAuth client ID for browser authentication
CLIENT_OAUTH_CLIENT_ID=your-client-oauth-client-id

# OAuth client secret for browser authentication
CLIENT_OAUTH_UI_CLIENT_SECRET=your-client-oauth-client-secret

## Authentication
# JWT secret for token generation and validation (defaults to combination of OAuth secrets)
# JWT_SECRET=your-custom-jwt-secret

## Kubernetes Configuration
# Namespace for Kubernetes resources
KUBERNETES_NAMESPACE=gamgui

## Session Configuration
# Image pull policy for session pods
SESSION_IMAGE_PULL_POLICY=Always

# Default port for session pods
SESSION_DEFAULT_PORT=8080

# Resource limits for session pods
SESSION_CPU_LIMIT=1
SESSION_MEMORY_LIMIT=1Gi
SESSION_CPU_REQUEST=0.5
SESSION_MEMORY_REQUEST=512Mi

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

## Logging
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

## Security
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=*
